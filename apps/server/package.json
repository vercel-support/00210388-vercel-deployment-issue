{
  "name": "@lawme/server",
  "repository": "https://github.com/lawme/workflows",
  "version": "1.0.0",
  "main": "dist/cjs/bundle.cjs",
  "module": "dist/esm/index.js",
  "src": "src/index.ts",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "exports": {
    "node": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/bundle.cjs"
    },
    "browser": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/bundle.cjs"
    },
    "default": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/bundle.cjs"
    }
  },
  "files": [
    "dist/cjs/**",
    "dist/esm/**",
    "dist/types/**"
  ],
  "scripts": {
    "start": "node dist/esm/server/main.js",
    "dev": "nodemon --watch src --exec node --import tsx --env-file ../../.env src/server/main.ts",
    "build": "pnpm run build:esm && pnpm run build:cjs",
    "build:esm": "rimraf dist/esm dist/types dist/tsconfig.tsbuildinfo && tsc -b --verbose",
    "build:cjs": "rimraf dist/cjs && tsx ./bundle.esbuild.ts",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "test": "tsx --test test/**/*.test.ts",
    "migration:generate": "drizzle-kit generate:pg --schema src/modules/schema.ts",
    "migration:run": "node --import tsx --env-file ../../.env ./src/migrate.ts"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.13.10",
    "@google-cloud/storage": "^7.7.0",
    "@lawme/core": "workspace:^",
    "@types/uuid": "^9.0.8",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "emittery": "^1.0.1",
    "emittery-0-13": "npm:emittery@^0.13.1",
    "express": "^4.18.2",
    "express-http-context": "^1.2.4",
    "helmet": "^7.1.0",
    "http-status": "^1.7.3",
    "jose": "^5.2.2",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.5",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "minimatch": "^9.0.3",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.6",
    "postgres": "^3.4.3",
    "runtime-node-refresh": "^1.0.7",
    "ts-pattern": "^5.0.5",
    "type-fest": "^4.5.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc/core": "^1.3.94",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/eslint": "^8.44.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/jwk-to-pem": "^2.0.3",
    "@types/lodash": "^4.14.200",
    "@types/lodash-es": "^4.17.10",
    "@types/minimatch": "^5.1.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.11.0",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.14",
    "esbuild": "^0.19.5",
    "eslint": "^8.52.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2"
  },
  "volta": {
    "node": "21.6.2"
  }
}
